<div class="admin-panel">
    <h1>Panel de Administrador</h1>
<table>
    <thead>
    <tr>
        <th>Nombre de usuario</th>
        <th>Rol</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    {{#each users}}
    <tr>
        <td>{{this.first_name}} {{this.last_name}}</td>
        <td>
            <select class="role-select" data-user-id="{{this._id}}">
                <option value="user" {{#if (eq this.role 'user')}}selected{{/if}}>User</option>
                <option value="admin" {{#if (eq this.role 'admin')}}selected{{/if}}>Admin</option>
                <option value="premium" {{#if (eq this.role 'premium')}}selected{{/if}}>Premium</option>
            </select>
            <button class="update-button" data-user-id="{{this._id}}">Actualizar</button>
        </td>
        <td>
            <button class="delete-button" data-user-id="{{this._id}}">Eliminar</button>
        </td>
    </tr>
    {{/each}}
    </tbody>
</table>
</div>
<script src="/js/admin.js"></script>

